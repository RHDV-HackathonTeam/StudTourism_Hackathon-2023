<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/map_item_layout"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Исакеевский собор"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"/>
    <ImageView
        android:id="@+id/place_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/rectangle"
        android:outlineProvider="background"
        android:scaleType="centerCrop"
        android:src="@drawable/peterburg1" />

    <TextView
        android:id="@+id/place_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="weggreg re g er g re   re h re h er g r e  aw  g er a  g ra g re  g re g sddgerwgergerhrehgergre  re gre g re g e r gz  r"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="15dp"/>

    <LinearLayout
        android:id="@+id/like_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_card_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp">

        <com.like.LikeButton
            app:icon_type="heart"
            app:icon_size="20dp"
            android:id="@+id/like_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:anim_scale_factor="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="192"
            android:id="@+id/like_count"
            android:textSize="14sp"
            android:padding="5dp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>