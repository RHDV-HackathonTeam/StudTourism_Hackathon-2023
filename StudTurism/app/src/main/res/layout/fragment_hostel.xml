<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HostelFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hostel_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hostel_1"
                android:layout_marginBottom="15dp"/>


            <TextView
                android:id="@+id/hostel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:text="Гостиница общежития №2"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/hostel_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="МГУ"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/hostel_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="г. Москва ул. Ленинградская, 29"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:textSize="16sp" />

            <View
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="15dp"
                android:background="#CFCECE" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Продолжительность пребывания"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hostel_day_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="от 3 до 11 дней"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="15dp"
                android:background="#CFCECE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Контактные данные"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hostel_contacts_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Анна Леонтьева"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/hostel_contacts_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="+79201760617"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/hostel_contacts_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="juliy_nik@mail.ru"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="15dp"
                android:background="#CFCECE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Условия заселения"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="От организации"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hostel_org_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Необходимо направление от направляющей организации (справка с места учебы/работы).
Сертификат о вакцинации от COVID-19
Паспорт"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Самостоятельное заселение"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hostel_indep_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Справка с места учебы/работы.
Сертификат о вакцинации от COVID-19.
Паспорт."
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>



    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>